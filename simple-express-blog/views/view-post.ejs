<link rel='stylesheet' href='/stylesheets/style.css' />

<% for (let i=0; i<posts.length; i++) { %>
    <div class="post">
        <h2><% posts[i].title %></h2>
        <p class="meta">
            By 
            <strong>
                <% posts[i].author %>
            </strong> 
            on 
            <em><%= posts[i].date %></em>
        </p>
        <p><%= posts[i].post %></p>
    </div>
<% } %>